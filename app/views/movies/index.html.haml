-#  This file is app/views/movies/index.html.haml
%h1 All Movies

= form_tag movies_path, :method => :get do
  Include:
  - @all_ratings.each do |rating|
    = rating
    = check_box_tag "ratings[#{rating}]", 1, @checks.include?("#{rating}")
  = submit_tag 'Refresh'

%table#movies
  %thead
    %tr
      - if params.key?(:by_title) || session.key?(:by_title)
        %th.hilite#title_header= link_to 'Movie Title', movies_path({:by_title => 0})
      - else
        %th#title_header= link_to 'Movie Title', movies_path({:by_title => 0})
      %th Rating
      - if params.key?(:by_date) || session.key?(:by_date)
        %th.hilite#release_date_header= link_to 'Release Date', movies_path({:by_date => 0})
      - else
        %th#release_date_header= link_to 'Release Date', movies_path({:by_date => 0})
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title 
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path
